{
  "private": true,
  "name": "antwar-monorepo",
  "version": "1.0.0",
  "description": "A static site engine built with React and webpack",
  "main": "./packages/antwar/dist",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:watch": "npm-watch",
    "init": "npm install && lerna bootstrap && npm run build",
    "test:watch": "jest --watch",
    "test": "jest",
    "lint": "eslint . --ext .js --ext .jsx --cache",
    "gh-pages:build-and-deploy":
      "npm run gh-pages:build && npm run gh-pages:deploy",
    "gh-pages:build": "webpack",
    "gh-pages:deploy": "gh-pages -d gh-pages",
    "gh-pages:stats": "webpack --json --profile > stats.json",
    "publish": "lerna publish",
    "postpublish": "cd site && npm run build && npm run deploy",
    "start": "cd smoketest && npm start",
    "site": "cd site && npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antwarjs/antwar.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "webpack",
    "static",
    "site",
    "generator",
    "blog",
    "blogging"
  ],
  "author": "Juho Vepsalainen <bebraw@gmail.com> (http://github.com/bebraw)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antwarjs/antwar/issues"
  },
  "homepage": "https://antwar.js.org/",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "front-matter": "^2.3.0",
    "git-prepush-hook": "^1.0.2",
    "jest": "^22.4.2",
    "json-loader": "^0.5.7",
    "lerna": "^3.3.0",
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.5",
    "marked": "^0.3.17",
    "marksy": "^6.0.3",
    "moment": "^2.21.0",
    "npm-watch": "^0.3.0",
    "preact": "^8.2.7",
    "preact-compat": "^3.18.0",
    "prettier": "^1.11.1",
    "prism-languages": "^0.4.0",
    "prismjs": "^1.12.2",
    "prop-types": "^15.6.1",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "remove-markdown": "^0.2.2",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2",
    "yaml-frontmatter-loader": "^0.1.0"
  },
  "jest": {
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
    "setupFiles": ["./lib/test-setup.js"]
  },
  "pre-push": ["lint", "test"],
  "watch": {
    "build": {
      "patterns": ["packages/**/*.{js,jsx}"],
      "ignore": "packages/*/dist/*.js"
    }
  }
}
