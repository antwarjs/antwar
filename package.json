{
  "private": true,
  "name": "antwar-monorepo",
  "version": "1.0.0",
  "description": "A static site engine built with React and Webpack",
  "scripts": {
    "build": "lerna run build",
    "init": "npm install && lerna bootstrap",
    "test": "tape packages/*/test/*.js",
    "test:lint": "eslint . --ext .js --ext .jsx --cache",
    "watch": "npm-watch",
    "gh-pages:build-and-deploy": "npm run gh-pages:build && npm run gh-pages:deploy",
    "gh-pages:build": "webpack",
    "gh-pages:deploy": "gh-pages -d gh-pages",
    "gh-pages:stats": "webpack --json --profile > stats.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antwarjs/antwar.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "webpack",
    "static",
    "site",
    "generator",
    "blog",
    "blogging"
  ],
  "author": "Juho Vepsalainen <bebraw@gmail.com> (http://github.com/bebraw)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antwarjs/antwar/issues"
  },
  "homepage": "http://antwar.js.org/",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.9",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "git-prepush-hook": "^1.0.1",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.26",
    "lodash": "^4.15.0",
    "marked": "^0.3.6",
    "npm-watch": "^0.1.6",
    "raw-loader": "^0.5.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-router": "^2.8.1",
    "style-loader": "^0.13.1",
    "tape": "^4.6.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1",
    "webpack-merge": "^0.14.1",
    "yaml-frontmatter-loader": "0.0.3"
  },
  "pre-push": [
    "test:lint",
    "test"
  ],
  "watch": {
    "build": {
      "patterns": ["packages/**/*.{js,jsx}"],
      "ignore": "packages/*/dist/*.js"
    },
    "test": {
      "patterns": ["packages/**/*.js"],
      "ignore": "packages/*/dist/*.js"
    },
    "test:lint": {
      "patterns": ["{packages,site}/**/*.{js,jsx}"],
      "ignore": "packages/*/dist/*.js"
    }
  }
}
